#include <iostream>
using namespace std;

// define the structure
struct Student {
    string name;
    int roll_number;
    float marks;
};

int main() {
    Student students[3];

    // input details for 3 students
    for (int i = 0; i < 3; i++) {
        cout << "Enter name, roll number and marks of student " << i + 1 << ": ";
        cin >> students[i].name;
        cin >> students[i].roll_number;
        cin >> students[i].marks;
    }

    // print details of 3 students
    cout << "\nDetails of students:\n";
    for (int i = 0; i < 3; i++) {
        cout << "Student " << i + 1 << ":\n";
        cout << "Name: " << students[i].name << endl;
        cout << "Roll Number: " << students[i].roll_number << endl;
        cout << "Marks: " << students[i].marks << endl;
        cout << "-----------------\n";
    }

    return 0;
}

